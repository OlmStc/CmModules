<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <UpgradeTenantWizard>
    <WizardForm CodeBeside="Sitecore.DataExchange.Local.Sdk.Applications.UpgradeTenantWizard, Sitecore.DataExchange.Local.Sdk">
      <WizardFormPage ID="SelectInstructionSetPage" Header='${ Sitecore.DataExchange.Local.Sdk.Texts.UpgradeTenant }' Text='${ Sitecore.DataExchange.Local.Sdk.Texts.PageTextSelectInstructionSetForUpgradeTenant }'>
        <WizardFormIndent>
          <GridPanel class="scFormTable" Width="100%" Columns="2" CellPadding="2">
            <Literal class="scFieldLabel" Text="Selected tenant:" />
            <Literal ID="SelectedTenantName" class="sc-text-largevalue" GridPanel.NoWrap="true" />
            <Literal class="scFieldLabel" Text="Instruction set:" />
            <Listbox ID="AvailableInstructionSets" Width="100%" GridPanel.Width="100%" Change="upgradetenantwizard:instructionsetchanged" />
            <Literal class="scFieldLabel" Text="Description:" />
            <Literal ID="SelectedInstructionSetDescription" class="sc-text-largevalue" />
          </GridPanel>
        </WizardFormIndent>
      </WizardFormPage>
      <WizardFormPage ID="WarningPage" Header='${ Sitecore.DataExchange.Local.Sdk.Texts.UpgradeTenant }' Text='${ Sitecore.DataExchange.Local.Sdk.Texts.PageTextUpgradeTenantWarning }'>
        <WizardFormIndent>
          <div class="scStretch scFlexColumnContainerWithoutFlexie">
            <Literal ID="WarningMessage" />
            <Literal ID="JobName" Visible="false" />
          </div>
        </WizardFormIndent>
      </WizardFormPage>
      <WizardFormPage ID="LastPage" Header='${ Sitecore.DataExchange.Local.Sdk.Texts.UpgradeTenant }'>
        <WizardFormPadding>
          <div class="scStretch scFlexColumnContainerWithoutFlexie">
            <Literal class="sc-text-largevalue" Text='${ Sitecore.DataExchange.Local.Sdk.Texts.TenantUpgradeFinished }'/>
            <Literal class="scFieldLabel" ID="Status" />
            <Literal class="scFieldLabel" Text="Result:" />
            <div class="scFlexContentWithoutFlexie scWizardLastPageResultText">
              <div class="scStretchAbsolute">
                <Memo ID="ResultText" class="scStretch" ReadOnly="true" Visible="true" />
              </div>
            </div>
          </div>
        </WizardFormPadding>
      </WizardFormPage>
    </WizardForm>
  </UpgradeTenantWizard>
</control>